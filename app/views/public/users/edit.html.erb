<p id="notice"></p>
<div class="container">
  <div class="row mb-3">
    <div class="col-1 px-0"></div>
    <div class="col-10 px-0">
      <h2>プロフィール編集</h2>
      <%= form_with model: @user, url: user_path, method: :patch do |f| %>
        <label class="font-weight-bold">プロフィール画像</label>
        <div class="d-flex mb-3">
          <div class="user-img-top" id="new-user-image">
            <% if @user.user_image.attached? %>
              <%= image_tag @user.bathhouse_image_main, class: "new-img user-img", id: "old_img" %>
            <% end %>
          </div>
          <div class="form-group ml-5 my-auto">
            <%= f.file_field :user_image %>
          </div>
        </div>
        <div class="mb-3">
          <label class="font-weight-bold">名前</label></br>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <label class="font-weight-bold">自己紹介</label>
          <label class="text-secondary">（200字）　※改行は反映されません</label></br>
          <%= f.text_area :introduction, class: 'form-control',size: "10x7" %>
        </div>
        <div class="mb-3">
          <label class="font-weight-bold">URL</label>
          <%= f.text_field :url, class: 'form-control',cols: "10" %>
        </div>
        <div class="mb-3">
          <label class="font-weight-bold">ホーム施設</label>
          <%= f.text_field :home_bathhouse, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <label class="font-weight-bold">メールアドレス</label>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="text-center mb-3">
          <%= f.submit '変更内容を保存' ,class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
    <div class="col-1 px-0"></div>
  </div>
</div>