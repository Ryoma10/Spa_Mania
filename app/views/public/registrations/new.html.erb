<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-9 px-0 mt-3">
      <h2>新規会員登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <table>
          <tr>
            <th>
              ユーザーネーム
            </th>
            <td>
              <%= render "public/shared/error_messages", resource: resource %>
              <div class="field">
                <%= f.text_field :name, size: 60 %>
              </div>
            </td>
          </tr>
          <tr>
            <th>
              メールアドレス
              <p class="small mb-0">※非公開</p>
            </th>
            <td>
              <div class="field">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 60 %>
              </div>
            </td>
          </tr>
          <tr>
            <th>
              パスワード
              <p class="small mb-0">英数字含む6文字以上</p>
            </th>
            <td>
              <div class="field">
                <%= f.password_field :password, autocomplete: "new-password", size: 60 %>
              </div>
            </td>
          </tr>
          <tr>
            <th>
              パスワード(確認用)
            </th>
            <td>
              <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", size: 60 %>
              </div>
            </td>
          </tr>
        </table>
        <div class="actions">
          <%= f.submit "登録する", class: "btn btn-primary", style: "width: 189px;" %>
        </div>
      <% end %>
      <p class="m-3">アカウントをお持ちの方は<%= link_to "こちら", new_user_session_path %></p>
      <p class="m-3">ゲストログインは<%= link_to 'こちら', users_guest_sign_in_path, method: :post %></p>
    </div>
  </div>
</div>
